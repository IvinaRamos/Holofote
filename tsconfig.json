{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",          // <--- IMPORTANTE
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vite/client", "react", "react-dom"],
    "lib": ["ESNext", "DOM"],
  },
  "include": ["src"]
}
